{
  "name": "vcborn-fes",
  "version": "0.2.0",
  "nodecg": {
    "compatibleRange": "^2.0.0",
    "graphics": [
      {
        "file": "main.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "waiting.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "main",
        "title": "画面配信",
        "width": 3,
        "file": "main.html",
        "headerColor": "#525F78"
      },
      {
        "name": "ad",
        "title": "フッター広告",
        "width": 3,
        "file": "ad.html",
        "headerColor": "#525F78"
      },
      {
        "name": "next",
        "title": "次のイベント",
        "width": 5,
        "file": "next.html",
        "headerColor": "#525F78"
      },
      {
        "name": "deck",
        "title": "音声デッキ",
        "width": 5,
        "file": "deck.html",
        "headerColor": "#525F78"
      }
    ]
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.webpack.json && tsc --noEmit",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.webpack.json && tsc --noEmit",
    "build": "run-z build",
    "build:css": "npx tailwindcss -i ./src/graphics/main/main.css -o ./graphics/main.css",
    "build:webpack": "cross-env NODE_ENV='production' TS_NODE_PROJECT='tsconfig.webpack.json' webpack",
    "build:extension": "tsc --project tsconfig.ext.json",
    "watch": "run-z watch",
    "watch:css": "npx tailwindcss -i ./src/graphics/main/main.css -o ./graphics/main.css --watch",
    "watch:webpack": "cross-env NODE_ENV='production' TS_NODE_PROJECT='tsconfig.webpack.json' webpack --watch",
    "watch:extension": "tsc --project tsconfig.ext.json --watch"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.20",
    "@splidejs/react-splide": "^0.7.12",
    "@types/node": "^20.10.4",
    "discord.js": "^14.14.1",
    "nodecg-types": "^1.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "twitter-api-v2": "^1.15.2",
    "youtube-chat": "2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "run-z": "^2.0.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.6",
    "thread-loader": "^4.0.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-nodecg": "^0.3.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
